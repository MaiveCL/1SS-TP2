<Window x:Class="TP2.Views.AccountStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP2.Views"
        mc:Ignorable="d"
            Title="Statut du jeton API"
            Height="444" Width="333"
            WindowStartupLocation="CenterOwner"
            ResizeMode="NoResize">

    <!--<Window.DataContext>
        <vm:ConfigWindowViewModel /> Le XAML ne contient pas le DataContext ici, on le fait dans le code-behind pour passer le delegate.
    </Window.DataContext>-->

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Message / chargement -->
        <TextBlock Text="{Binding Message}" Foreground="DarkRed"
                   FontStyle="Italic" Grid.Row="0" Margin="0,0,0,10"/>

        <!-- Données -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Plan :" Grid.Row="0" Grid.Column="0"/>
            <TextBlock Text="{Binding Status.Plan}" Grid.Row="0" Grid.Column="1"/>

            <TextBlock Text="Statut :" Grid.Row="1" Grid.Column="0"/>
            <TextBlock Text="{Binding Status.Status}" Grid.Row="1" Grid.Column="1"/>

            <TextBlock Text="Requêtes (aujourd'hui) :" Grid.Row="2" Grid.Column="0"/>
            <TextBlock Text="{Binding Status.Requests}" Grid.Row="2" Grid.Column="1"/>

            <TextBlock Text="Octets (aujourd'hui) :" Grid.Row="3" Grid.Column="0"/>
            <TextBlock Text="{Binding Status.Bytes}" Grid.Row="3" Grid.Column="1"/>

            <TextBlock Text="Limite quotidienne (requêtes) :" Grid.Row="4" Grid.Column="0"/>
            <TextBlock Text="{Binding Status.DailyRequestsLimit}" Grid.Row="4" Grid.Column="1"/>

            <TextBlock Text="Limite quotidienne (octets) :" Grid.Row="5" Grid.Column="0"/>
            <TextBlock Text="{Binding Status.DailyBytesLimit}" Grid.Row="5" Grid.Column="1"/>

            <TextBlock Text="Date du rapport :" Grid.Row="6" Grid.Column="0"/>
            <TextBlock Text="{Binding Status.Date}" Grid.Row="6" Grid.Column="1"/>

            <TextBlock Text="Expiration du plan :" Grid.Row="7" Grid.Column="0"/>
            <TextBlock Text="{Binding Status.PlanExpires}" Grid.Row="7" Grid.Column="1"/>
        </Grid>

        <!-- Bouton Fermer -->
        <Button Content="Fermer" Width="100" HorizontalAlignment="Right"
                Margin="0,10,0,0" Grid.Row="2"
                Command="{Binding CmdFermer}"/>
    </Grid>
</Window>
