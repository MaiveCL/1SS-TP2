<Window x:Class="TP2.Views.AccountStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP2.Views"
        mc:Ignorable="d"
            Title="Statut du jeton API"
            Height="444" Width="333"
            WindowStartupLocation="CenterOwner"
            ResizeMode="NoResize">

    <!--<Window.DataContext>
        <vm:ConfigWindowViewModel /> Le XAML ne contient pas le DataContext ici, on le fait dans le code-behind pour passer le delegate.
    </Window.DataContext>-->

        <!-- Données -->
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Message / chargement -->
        <TextBlock Text="{Binding MessageErreur}"
                   Foreground="DarkRed"
                   FontStyle="Italic"
                   Grid.Row="0"
                   Margin="0,0,0,10"/>

            <!-- Données -->
            <Grid Grid.Row="1" Margin="0,0,0,10">

                <!-- Styles -->
                <Grid.Resources>
                    <Style TargetType="TextBlock" x:Key="RightAlignLabel">
                        <Setter Property="HorizontalAlignment" Value="Right"/>
                        <Setter Property="TextAlignment" Value="Right"/>
                        <Setter Property="Margin" Value="0,3"/>
                    </Style>

                    <Style TargetType="TextBlock" x:Key="LeftAlignValue">
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="TextAlignment" Value="Left"/>
                        <Setter Property="Margin" Value="5,3"/>
                    </Style>
                </Grid.Resources>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Ligne 1 -->
                <TextBlock Text="Plan :" Grid.Row="3" Grid.Column="0" Style="{StaticResource RightAlignLabel}"/>
                <TextBlock Text="{Binding Statut.Plan}" Grid.Row="3" Grid.Column="1" Style="{StaticResource LeftAlignValue}"/>

                <!-- Ligne 2 -->
                <TextBlock Text="Statut :" Grid.Row="7" Grid.Column="0" Style="{StaticResource RightAlignLabel}"/>
                <TextBlock Text="{Binding Statut.Status}" Grid.Row="7" Grid.Column="1" Style="{StaticResource LeftAlignValue}"/>

                <!-- Ligne 3 -->
                <TextBlock Text="Requêtes (aujourd'hui) :" Grid.Row="1" Grid.Column="0" Style="{StaticResource RightAlignLabel}"/>
                <TextBlock Text="{Binding Statut.Requests}" Grid.Row="1" Grid.Column="1" Style="{StaticResource LeftAlignValue}"/>

                <!-- Ligne 4 -->
                <TextBlock Text="Octets (aujourd'hui) :" Grid.Row="2" Grid.Column="0" Style="{StaticResource RightAlignLabel}"/>
                <TextBlock Text="{Binding Statut.Bytes}" Grid.Row="2" Grid.Column="1" Style="{StaticResource LeftAlignValue}"/>

                <!-- Ligne 5 -->
                <TextBlock Text="Limite quotidienne (requêtes) :" Grid.Row="5" Grid.Column="0" Style="{StaticResource RightAlignLabel}"/>
                <TextBlock Text="{Binding Statut.Daily_requests_limit}" Grid.Row="5" Grid.Column="1" Style="{StaticResource LeftAlignValue}"/>

                <!-- Ligne 6 -->
                <TextBlock Text="Limite quotidienne (octets) :" Grid.Row="6" Grid.Column="0" Style="{StaticResource RightAlignLabel}"/>
                <TextBlock Text="{Binding Statut.Daily_bytes_limit}" Grid.Row="6" Grid.Column="1" Style="{StaticResource LeftAlignValue}"/>

                <!-- Ligne 7 -->
                <TextBlock Text="Date du rapport :" Grid.Row="0" Grid.Column="0" Style="{StaticResource RightAlignLabel}"/>
                <TextBlock Text="{Binding Statut.Date}" Grid.Row="0" Grid.Column="1" Style="{StaticResource LeftAlignValue}"/>

                <!-- Ligne 8 -->
                <TextBlock Text="Expiration du plan :" Grid.Row="4" Grid.Column="0" Style="{StaticResource RightAlignLabel}"/>
                <TextBlock Text="{Binding Statut.Plan_expires}" Grid.Row="4" Grid.Column="1" Style="{StaticResource LeftAlignValue}"/>
            </Grid>

            <!-- Bouton Fermer -->
            <Button Content="Fermer"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0,10,0,0"
                Grid.Row="2"
                Command="{Binding CmdFermer}"/>
        </Grid>
</Window>
