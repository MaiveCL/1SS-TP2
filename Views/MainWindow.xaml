<Window x:Class="TP2.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP2"
        xmlns:vm="clr-namespace:TP2.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <DockPanel LastChildFill="True">

        <Menu DockPanel.Dock="Top" Width="{Binding ElementName=win, Path=Width}">
          <MenuItem Header="Configuration"
            Command="{Binding CmdOuvrirConfig}"/>
          <MenuItem Header="Statut Jeton"
            Command="{Binding CmdOuvrirStatut}"/>
        </Menu>
        
        <Grid>

        </Grid>
        
    </DockPanel>
</Window>
