<Window x:Class="TP2.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP2"
        xmlns:vm="clr-namespace:TP2.ViewModels"
        mc:Ignorable="d"
        x:Name="win"
        Title="Détection de langue" Height="450" Width="800">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <DockPanel LastChildFill="True">

        <Menu DockPanel.Dock="Top" Width="{Binding ElementName=win, Path=Width}">
          <MenuItem Header="Configuration"
            Command="{Binding CmdOuvrirConfig}"/>
          <MenuItem Header="Statut Jeton"
            Command="{Binding CmdOuvrirStatut}"/>
        </Menu>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- TextBox pour le texte à analyser -->
            <TextBox Grid.Row="0" Grid.Column="0" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True"
                     VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                     Text="{Binding TexteAAnalyser, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Bouton détecter -->
            <Button Grid.Row="1" Grid.Column="0" Content="Détecter" Margin="0,10,0,0"
                    Command="{Binding CmdDetecterLangue}"
                    IsEnabled="{Binding PeutDetecter}"/>

            <!-- Liste des langues détectées -->
            <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Margin="10,0,0,0">
                <Label Content="Langues détectées"/>
                <ComboBox ItemsSource="{Binding ResultatsDetection}"
                          SelectedItem="{Binding DetectionSelectionnee}"
                          DisplayMemberPath="LangueComplete"/>
                <TextBlock Margin="0,10,0,0">
                    <Run Text="Confiance : "/>
                    <Run Text="{Binding DetectionSelectionnee.Confiance, Mode=OneWay}"/>
                    <LineBreak/>
                    <Run Text="Est fiable : "/>
                    <Run Text="{Binding DetectionSelectionnee.EstFiable, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>
        </Grid>

    </DockPanel>
</Window>
